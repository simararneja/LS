<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:background="@drawable/g2"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/businessnew"
            android:contentDescription="Business" >
        </ImageView>

        <TextView
            android:id="@+id/bottomLine2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/g2"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50dp"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="48dp"
                android:layout_height="58dp"
                android:background="@drawable/button1955png"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="50dip"
                android:layout_height="55dip"
                android:layout_weight="1"
                android:src="@drawable/headermargin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/headernew" />

            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:src="@drawable/headermargin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bottomLine"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/g2"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bottomLine3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/g2"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listFeeds"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="50dp"
                android:animateLayoutChanges="true"
                android:background="@color/white"
                android:fastScrollEnabled="true"
                android:keepScreenOn="true"
                android:textFilterEnabled="true"
                android:textSize="50sp" >
            </ListView>

            <TextView
                android:id="@+id/any_old_widget"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="@string/hello"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>