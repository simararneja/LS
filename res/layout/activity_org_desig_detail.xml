<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
          
         <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent">
             <TableRow android:layout_height="wrap_content"
                  android:layout_width="fill_parent">
             <TextView
        android:id="@+id/txtOrgDesig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mem_name_font"
        android:layout_marginTop="30dp"
        android:gravity="center"
        />   
             </TableRow>
          
             <TableRow android:layout_height="wrap_content"
                  android:layout_width="fill_parent">
         
         <TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
             <TableRow android:layout_height="wrap_content"
                 android:id="@+id/orgheadrow"
                  android:layout_width="fill_parent">
			 <ImageView
        android:id="@+id/imgOrgImage"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/loading_big"
        android:contentDescription="Image" />
			                  
       
           <TextView
        android:id="@+id/txtOrgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:maxWidth="175dp"
        android:maxLines="4"
        />
        
             </TableRow>
              <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
             <TextView
        		android:text="Father's Name"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="20dp"
        		android:textSize="@dimen/heading_font" />
    		<TextView
        		android:id="@+id/txtOrgFName"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="20dp"
        	/>  
             </TableRow>
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
             <TextView
        		android:text="Mother's Name"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="20dp"
        		android:layout_marginLeft="10dp"
        		android:textSize="@dimen/heading_font" />
    		<TextView
        		android:id="@+id/txtOrgMName"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="20dp"
        	/>    
             </TableRow>
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 <TextView
        		android:text="Date of Birth"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="20dp"
        		android:textSize="@dimen/heading_font" />
    		<TextView
        		android:id="@+id/txtOrgDOB"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		
        		android:layout_marginTop="20dp"
        	/>
             </TableRow>
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 <TextView
        		android:text="Spouse Name"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="20dp"
        		android:textSize="@dimen/heading_font" />
    		<TextView
        		android:id="@+id/txtOrgSpouseName"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		
        		android:layout_marginTop="20dp"
        	/>
                 
             </TableRow>
             
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 <TextView
        		android:text="E-mail ID"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="20dp"
        		android:textSize="@dimen/heading_font" />
    		<TextView
        		android:id="@+id/txtOrgEmail"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		
        		android:layout_marginTop="20dp"
        	/> 
             </TableRow>
             </TableLayout>
             </TableRow>
             <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content">
              <TableLayout 
                  android:layout_marginRight="20dp" 
                   android:layout_height="wrap_content" android:layout_width="wrap_content">
                 
            <!-- -->  <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
                 <TextView
        		android:text="Education Qualification"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="20dp"
        		android:layout_marginLeft="10dp"
        		android:textSize="@dimen/heading_font" />
                 
             </TableRow>
             <TableRow  android:layout_height="wrap_content" android:layout_width="fill_parent">
              <TextView
        		android:id="@+id/txtOrgEduQua"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:lineSpacingExtra="5dp"
        		android:layout_marginTop="20dp"
        		android:maxLines="100"
        	/>
             </TableRow>
              <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 <TextView
        		android:text="Position Held:"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"
        		android:layout_marginTop="20dp"
        		android:textSize="@dimen/heading_font" />
             </TableRow>
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
              <TextView
        		android:id="@+id/txtOrgPosHeld"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:lineSpacingExtra="5dp"
        		android:layout_marginTop="20dp"
        		android:maxLines="100"
        	/>   
             </TableRow>
              
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 
                 
             </TableRow>
             <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent">
                 
                 
             </TableRow> <!-- -->
             </TableLayout>
             </TableRow>
         </TableLayout>
         
</ScrollView>